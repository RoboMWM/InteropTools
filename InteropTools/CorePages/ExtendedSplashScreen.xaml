            <Grid
                Grid.Row="2"
                MaxWidth="250"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle
                    Grid.Column="0"
                    Margin="0,0,6,0"
                    Fill="White" />
