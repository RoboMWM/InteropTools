        </Style>
    </UserControl.Resources>

    <Grid Margin="0,-1,0,-1">
        <Grid x:Name="MainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <controlssplitview:SwipeableSplitView
