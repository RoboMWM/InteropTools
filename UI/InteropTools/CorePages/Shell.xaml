                PaneOpenChanged="SplitView_PaneOpenChanged">
                <SplitView.Pane>
                    <Grid x:Name="SplitViewPaneGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Rectangle
                            x:Name="Acrylic"
                            Grid.RowSpan="3"
                            Margin="0,-33,0,0"
                            Fill="{ThemeResource CardBackgroundFillColorDefault}" />

                        <controlsbackdrop:BackDropMedium
                            x:Name="BackDrop"
                            Grid.RowSpan="3"
                            Margin="0,-33,0,0"
                            Visibility="Collapsed" />

