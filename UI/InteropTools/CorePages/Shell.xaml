                                                        FontSize="15"
                                                        Text="{Binding Key.Icon}" />
                                                    <TextBlock
                                                        Margin="16,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="15"
                                                        FontWeight="Medium"
